#Rounded Blue Button Class
<Transparent_Button@Button>:    
    canvas.before:
        Color:
            rgba:self.clr_before
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:[20]
            
    clr_before:(0,0,0,.6)
    clr_after:(1,1,1,.6)
    clr:(0,0,0,.6)
    outline_color:c.BLACK.hex()
    outline_width:5
    background_normal:''
    background_color:(0,0,0,0)
    font_name:'Fonts/CaviarDreams.ttf'
    background_down:'Images/clickblue.png'
    on_press:
        self.clr=self.clr_before
        self.clr_before=self.clr_after
    on_release:
        self.clr_before = self.clr
        

<Blast>:
    text: ""
    on_press: gif.anim_delay = 0.10
    on_press: gif._coreimage.anim_reset(True)
    pos_hint:{"center_x":0.5, "center_y":0.80}
    background_color:0,0,0,0
    background_normal:''
    Image:
        source:'Images/blast.png'
        size:gif.size
        pos:gif.pos[0],gif.pos[1]-150
    Image:
        id: gif
        source: 'Images/blast.gif'
        center: self.parent.center
        size:500,500
        allow_stretch: True
        anim_delay: -1
        anim_loop: 1

  
# Icon for Splash Screen 
<Rps>:
    source:''
    size_hint:.2,.1
    angle:360
    background_color:(0,0,0,0)
    background_normal:''
    
    canvas.before:

        PushMatrix 
        Rotate:
            angle:root.angle
            origin: self.center
           
    canvas.after:
        PopMatrix
        
    canvas:
        Rectangle:
            source:self.source
            size:self.size
            pos:self.pos           
        
    on_release:
        self.animate_rotate(self)
    
# Popup Window 
<MyPopup>:
    title: ""              
    separator_height:0
    size_hint: None, None
    
    canvas.before:
        PushMatrix
